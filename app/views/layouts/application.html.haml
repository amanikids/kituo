%html{html_attrs}
  %head
    = stylesheet_link_tag 'reset', controller_name
    = javascript_include_tag 'jquery-1.3.2'
    = javascript_include_tag 'jquery-ui-1.7.2.everything.min'
    = javascript_include_tag 'change_locale'
    = csrf_meta_tag 
    = yield(:head)
    - other_locales.each do |code, name|
      %link{ :rel => 'alternate', :hreflang => code, :title => name, :href => url_for(:locale => code), :class => 'locale' }

  %body
    = yield

    #ajax-loading
      Working

    :javascript
      $(function() {
        $('#ajax-loading').ajaxStart(function() {
          $(this).fadeIn();
        });

        $('#ajax-loading').ajaxStop(function() {
          $(this).fadeOut();
        });
      });

      $(document).ajaxSend(function(e, xhr, options) {
        var token = $("meta[name='csrf-token']").attr("content");
        xhr.setRequestHeader("X-CSRF-Token", token);
      });

